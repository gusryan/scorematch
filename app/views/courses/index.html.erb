<h3>Courses</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Par</th>
      <th>Tees</th>
      <th>Holes</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.location %></td>
        <td><%= course.par %></td>
        <td><%= course.tees %></td>
	<td><%= course.holes.count %></td>
        <td><%= link_to 'Show', course %> | 
        <%= link_to 'Edit', edit_course_path(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
