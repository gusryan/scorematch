<html lang="en">

<body>
<p />
<ul class="nav nav-tabs">
<li class="active"><a href="/courses">Courses</a></li>
<li><a href="/golfers">Golfers</a></li>
<li><a href="/matches">Matches</a></li>
<li><a href="/scores">Scores</a></li>
</ul>

<section>

<h3>Courses</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Par</th>
      <th>Location</th>
      <th>Tees</th>
      <th>Slope</th>
      <th>Rating</th>
      <th>Holes</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.par %></td>
        <td><%= course.location %></td>
        <td><%= course.tees %></td>
        <td><%= course.slope %></td>
        <td><%= course.rating %></td>
	<td><%= course.holes.count %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %>
	| <%= link_to 'Destroy', course, method: :delete, date: {confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Course', new_course_path, :class => 'btn btn-info btn-small' %>
<p />
</body>
</html>
