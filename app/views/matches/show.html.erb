<p id="notice"><%= notice %></p>

<p>
  <h3><em><%= @match.name %></em></h3>
</p>
<p>
<h3><%= Golfer.find(@match.golfer1).name %> vs. <%= @match.golfer2.name %>
</h3>
at <strong><%= @match.course.name %></strong>

<table class="table table-striping"><tr>
<th colspan"9"><strong><center>Course Info</center></strong></th>
<tr><td><strong>Hole #</strong></td><% @match.course.holes.each do |s| %>
<td><%= s.hole_number %><% end %></td>
<br>

<tr><td><strong>Par</strong></td><% @match.course.holes.each do |s| %>
<td><%= s.par %><% end %></td>
</tr><br>

<tr><td><strong>Handicap</strong></td><% @match.course.holes.each do |s| %>
<td><%= s.handicap %><% end %></td>
</tr>
<br>
<p>
  <strong>Winner:</strong>
</p>
<br>

<tr><td><strong>Yardage</strong></td><% @match.course.holes.each do |s| %>
<td><%= s.yardage %><% end %>
</td>
</tr>
</table>
</p>
<table border="2">
<%= form_for ([@match, @match.scores.build]) do |f| %>
<tr>
<td><strong>Match:</strong></td>
<td>
<%= f.select :match_id, Match.all.collect {|m| [m.name, m.id]} %>
</td></tr>
<td>
<strong>Golfer:</strong></td>
<td>
<%= f.select :golfer_id, Golfer.all.collect {|g| [g.name, g.id]} %>
</td></tr>
<tr><td>
  <strong>Hole:</strong></td>
<td>
<%= f.select :hole_id, Hole.all.collect {|h| [h.hole_number, h.hole_number]} %>
</td></tr>
</p>
<tr class="info"><td>
<strong>Strokes:</strong></td>
<td>
<%= f.select(:stroke, options_for_select((1..11).step(1).to_a.map{|s| ["#{s}", s]})) %>
</td></tr>
<tr><td></td><td>
<%= f.submit %></td>
</tr>
</table>
<% end %>
</p>


<%= link_to 'Edit', edit_match_path(@match) %> |
<%= link_to 'Back', matches_path %>
<p />
</body>
</html>
