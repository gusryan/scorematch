<p id="notice"><%= notice %></p>

<p>
  <h3><em><%= @match.name %></em></h3>
</p>
<p>
<h3><%= Golfer.find(@match.golfer1).name %> vs. <%= @match.golfer2.name %>
</h3>
at <strong><%= @match.course.name %></strong>

<table class="table table-bordered"><tr>
<th colspan"9"><strong><center>Course Info</center></strong></th>
<tr><td><strong>Hole #</strong></td><% @match.course.holes.each do |s| %>
<td><%= s.hole_number %><% end %></td>
<br>

<tr><td><strong>Par</strong></td><% @match.course.holes.each do |s| %>
<td><%= s.par %><% end %></td>
</tr><br>

<tr><td><strong>Handicap</strong></td><% @match.course.holes.each do |s| %>
<td><%= s.handicap %><% end %></td>
</tr>
<br>
<p>
  <strong>Winner:</strong>
</p>
<br>

<tr><td><strong>Yardage</strong></td><% @match.course.holes.each do |s| %>
<td><%= s.yardage %><% end %>
</td>
</tr>
</table>
</p>

<table>
<tr>
<td>
<strong>Golfer:</strong><br>
</td>
</tr>
  <strong>Hole:</strong>
<div>
<% form_for([@match, @match.course.holes.each]) do |n| %>
<% end %>

</div>
</p>
<p>
  <strong>Strokes:</strong><select></p>
<% form_for([@match, @match.scores.build]) do |n| %>
<%= n.select(:stroke, options_for_select((10..100).step(10).to_a.map{|s| ["#{s}%", s]})) %>
<% end %>
</p>


<tr><td><strong><%= Golfer.find(@match.golfer2).name %></strong></td>
<td>
<select>
<% form_for([@match, @match.scores.build]) do |n| %>
<%= n.select(:stroke, options_for_select((10..100).step(10).to_a.map{|s| ["#{s}%", s]})) %>
<% end %>
</select>
</td>
</tr>
</table>

</p>

<%= link_to 'Edit', edit_match_path(@match) %> |
<%= link_to 'Back', matches_path %>
<p />
</body>
</html>
