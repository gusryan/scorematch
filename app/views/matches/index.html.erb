<h3>Matches</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Golfer 1</th>
      <th>Golfer 2</th>
      <th>Score</th>
      <th>Winner</th>
      <th>Course</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to match.name, name %></td>
        <td><%= match.golfer1 %></td>
        <td><%= match.golfer2 %></td>
        <td><%= match.score %></td>
        <td><%= match.winner %></td>
        <td><%= match.course %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
