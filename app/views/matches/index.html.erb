<h3>Matches</h3>

<table class="table table-striping">
  <thead>
    <tr>
      <th>Name</th>
      <th>Golfer 1</th>
      <th>Golfer 2</th>
      <th>Course</th>
      <th>Score</th>
      <th>Winner</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to match.name, match %></td>
        <td><%= match.golfer1.name %></td>
        <td><%= match.golfer2.name %></td>
	<td><%= match.course.name %></td>
        <td><%= match.result %></td>
        <td><%= match.winner %></td>
        <td><%= link_to 'Show', match %> 
        | <%= link_to 'Edit', edit_match_path(match) %> | 
        <%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
