<h3>Matches</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Golfer 1</th>
      <th>Golfer 2</th>
      <th>Course</th>
      <th>Winner</th>
      <th>Score</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to match.name, match %></td>
        <td><%= match.golfer1 %></td>
        <td><%= match.golfer2 %></td>
        <td><%= match.course_id %></td>
        <td><%= match.score %></td>
        <td><%= match.winner %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %> | 
        <%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

