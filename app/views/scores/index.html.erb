<h3>Scores</h3>

<table>
  <thead>
    <tr>
      <th>Golfer</th>
      <th>Hole</th>
      <th>Match</th>
      <th>Score</th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.golfer_id %></td>
        <td><%= score.hole_id %></td>
        <td><%= score.match_id %></td>
        <td><%= score.stroke %></td>
        <td><%= link_to 'Show', score %> |
        <%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Score', new_score_path %>
